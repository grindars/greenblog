<%= formalwear_form_for @comment, :url => post_comment_path(@comment.post, @comment), :html => { :class => "form-horizontal" } do |f| %>
    <%= f.fieldset "Edit comment" do %>
        <%= f.text_area_group :body, "Comment", :class => "input-xxlarge" %>
    <% end %>
    
    <%= f.actions do %>
        <%= f.submit "Save" %>
        <%= f.button "Preview", :onclick => "Greenblog.previewMarkup(this.form, document.getElementById('comment_preview'))" %>        
    <% end %>
<% end %>

<div id="comment_preview">
</div>