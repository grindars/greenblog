<% title "Change your password" %>
<% add_breadcrumb "Sign in", session_path(resource_name) %>
<% add_breadcrumb "Forgot your password?", password_path(resource_name) %>

<%= formalwear_form_for resource, :as => resource_name, :url => password_path(resource_name), 
    :html => { :method => :put, :class => "form-horizontal" } do |f| %>
      
    <%= f.hidden_field :reset_password_token %>
      
    <%= f.fieldset title do %>
        <%= f.password_field_group :password %>
        <%= f.password_field_group :password_confirmation %>
    <% end %>    
    
    <%= f.actions do %>
        <%= f.submit "Change my password" %>
    <% end %>
  
<% end %>

<%= render "devise/shared/links" %>
