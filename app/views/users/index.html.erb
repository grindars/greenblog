<% title 'Users' %>

<div class="page-header">
    <h1>Users</h1>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nickname</th>
            <th>E-Mail</th>
            <th>Created at</th>
        </tr>
    </thead>
    <tbody>
<% @users.each do |user| %>
        <tr>
            <td><%= link_to user.id, user %></td>
            <td><%= link_to user.nickname, user %></td>
            <td><%= link_to user.email, user %></td>            
            <td><%= link_to user.created_at, user %></td>
        </tr>
<% end %>
    </tbody>
        
</table>

<%= will_paginate @users, :renderer => BootstrapPaginationRenderer %>