<% title "Tags" %>

<div class="page-header">
    <h1>Tags</h1>
</div>

<% if can?(:create, Tag) %>
    <%= link_to 'New', new_tag_path, :class => "btn pull-right btn-success" %>
    <br /><br />
<% end %>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thread>
    <tbody>
<% @tags.each do |tag| %>
        <tr>
            <td><%= link_to tag.name, tag %></td>
        </tr>        
<% end %>
    </tbody>
</table>

<%= will_paginate @users, :renderer => BootstrapPaginationRenderer %>